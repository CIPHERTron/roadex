{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 3000
    },
    "functions": {
      "port": 3000
    },
    "firestore": {
      "port": 5000
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 6000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": false
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
